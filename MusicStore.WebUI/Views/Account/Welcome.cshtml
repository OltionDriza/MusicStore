@model MusicStore.WebUI.Models.Account
@{
    ViewBag.Title = "MyAccount";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<div class="cart-table-area section-padding-100">
<div class="container-fluid">
    <div class="row">
        <div class="col-12 col-lg-8">
            <div class="checkout_details_area mt-50 clearfix">

                Welcome @Session["userID"].ToString() user!
                <br />

                <div class="col-12 mb-3">
                    <div class="cart-btn mt-100">
                        <a href="@Url.Action("Logout" , "Account")" class="btn amado-btn w-100">Logout</a>
                        <br />
                        <br />
                        <a href="@Url.Action("Checkout" , "Cart")" id="checkout_button" class="btn amado-btn w-100">Complete Order</a>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
</div>

